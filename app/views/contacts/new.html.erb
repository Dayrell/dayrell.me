<%= render 'shared/errors', obj: @contact %>

<div class='row'>
    <!-- use all 12 column of bootstrap container -->
    <div class='col-xs-12>'>

        <%= form_for(@contact, :html => { class: "form-horizontal", role: "form" }) do |f| %>
            <div class ="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Seu nome", autofocus: true %>
                </div>
            </div>

            <div class ="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :email %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :email, class: "form-control", placeholder: "Seu email", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :message %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :message, rows: 10, class: "form-control", placeholder: "Mensagem", autofocus: true  %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: ' btn btn-primary btn-lg' %>
                </div>
            </div>

        <% end %>
    </div>
</div>
